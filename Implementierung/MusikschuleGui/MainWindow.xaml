<Window x:Class="MusikschuleGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusikschuleGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Musikschule – Unterrichtsverwaltung"
                       FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Bitte wählen Sie einen Bereich."
                       Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Width="250">
            <Button Content="Schüler verwalten" Margin="0,0,0,10"
                    Click="Schueler_Click"/>
            <Button Content="Unterrichtsstunden planen" Margin="0,0,0,10"
                    Click="Unterricht_Click"/>
            <Button Content="Zahlungsübersicht" Margin="0,0,0,10"
                    Click="Zahlungen_Click"/>
            <Button Content="Beenden" Click="Beenden_Click"/>
        </StackPanel>
    </Grid>
</Window>
