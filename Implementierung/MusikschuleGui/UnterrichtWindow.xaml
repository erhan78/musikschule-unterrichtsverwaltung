<Window x:Class="MusikschuleGui.UnterrichtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusikschuleGui"
        mc:Ignorable="d"
        Title="UnterrichtWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgStunden" Grid.Row="0" AutoGenerateColumns="False"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UnterrichtsstundeId}" Width="50"/>
                <DataGridTextColumn Header="Schüler"
                                    Binding="{Binding Schueler.Vorname}" Width="*"/>
                <DataGridTextColumn Header="Lehrer"
                                    Binding="{Binding Lehrer.Vorname}" Width="*"/>
                <DataGridTextColumn Header="Datum/Uhrzeit"
                                    Binding="{Binding DatumUhrzeit, StringFormat=dd.MM.yyyy HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Dauer (Min)"
                                    Binding="{Binding DauerMinuten}" Width="80"/>
                <DataGridTextColumn Header="Preis/Stunde"
                                    Binding="{Binding PreisProStunde}" Width="90"/>
                <DataGridTextColumn Header="Betrag"
                                    Binding="{Binding Betrag}" Width="90"/>
                <DataGridTextColumn Header="Status"
                                    Binding="{Binding Status}" Width="90"/>
                <DataGridTextColumn Header="Zahlung"
                                    Binding="{Binding Zahlungsstatus}" Width="90"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <WrapPanel Margin="0,0,0,5">
                <TextBlock Text="Schüler:" Width="70"/>
                <ComboBox x:Name="cbSchueler" Width="200"/>

                <TextBlock Text="Lehrer:" Width="70" Margin="20,0,0,0"/>
                <ComboBox x:Name="cbLehrer" Width="200"/>
            </WrapPanel>

            <WrapPanel Margin="0,0,0,5">
                <TextBlock Text="Datum:" Width="70"/>
                <DatePicker x:Name="dpDatum" Width="150"/>

                <TextBlock Text="Uhrzeit:" Width="70" Margin="20,0,0,0"/>
                <TextBox x:Name="txtUhrzeit" Width="80" Text="15:00"/>

                <TextBlock Text="Dauer (Min):" Width="90" Margin="20,0,0,0"/>
                <TextBox x:Name="txtDauer" Width="60" Text="45"/>
            </WrapPanel>

            <WrapPanel Margin="0,0,0,5">
                <TextBlock Text="Preis/Stunde:" Width="90"/>
                <TextBox x:Name="txtPreis" Width="80" Text="40,00"/>

                <TextBlock Text="Status:" Width="60" Margin="20,0,0,0"/>
                <ComboBox x:Name="cbStatus" Width="130">
                    <ComboBoxItem Content="geplant" IsSelected="True"/>
                    <ComboBoxItem Content="durchgeführt"/>
                    <ComboBoxItem Content="abgesagt"/>
                </ComboBox>

                <TextBlock Text="Zahlung:" Width="60" Margin="20,0,0,0"/>
                <ComboBox x:Name="cbZahlung" Width="130">
                    <ComboBoxItem Content="offen" IsSelected="True"/>
                    <ComboBoxItem Content="bezahlt"/>
                </ComboBox>
            </WrapPanel>

            <WrapPanel Margin="0,5,0,0">
                <Button Content="Neu" Width="80"/>
                <Button Content="Speichern" Width="80" Margin="10,0,0,0"/>
                <Button Content="Löschen" Width="80" Margin="10,0,0,0"/>
                <Button Content="Schließen" Width="80" Margin="10,0,0,0"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
