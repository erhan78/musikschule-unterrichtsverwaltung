<Window x:Class="MusikschuleGui.ZahlungsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusikschuleGui"
        mc:Ignorable="d"
        Title="ZahlungsWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Schüler:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cbSchueler" Width="250" Margin="0,0,10,0"
                      SelectionChanged="cbSchueler_SelectionChanged"/>
            <Button Content="Schließen" Width="80" Click="Schließen_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgStunden" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum/Uhrzeit"
                                    Binding="{Binding DatumUhrzeit, StringFormat=dd.MM.yyyy HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Dauer (Min)"
                                    Binding="{Binding DauerMinuten}" Width="80"/>
                <DataGridTextColumn Header="Preis/Stunde"
                                    Binding="{Binding PreisProStunde}" Width="90"/>
                <DataGridTextColumn Header="Betrag"
                                    Binding="{Binding Betrag}" Width="90"/>
                <DataGridTextColumn Header="Status"
                                    Binding="{Binding Status}" Width="90"/>
                <DataGridTextColumn Header="Zahlung"
                                    Binding="{Binding Zahlungsstatus}" Width="90"/>
                <DataGridTextColumn Header="Lehrer"
                                    Binding="{Binding Lehrer.Vorname}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
            <TextBlock x:Name="txtSummeAlle" FontWeight="Bold" />
            <TextBlock x:Name="txtSummeOffen" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
