<Window x:Class="MusikschuleGui.SchuelerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusikschuleGui"
        mc:Ignorable="d"
        Title="SchuelerWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgSchueler" Grid.Row="0" AutoGenerateColumns="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding SchuelerId}" Width="50"/>
                <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname}" Width="*"/>
                <DataGridTextColumn Header="Nachname" Binding="{Binding Nachname}" Width="*"/>
                <DataGridTextColumn Header="Instrument" Binding="{Binding Instrument}" Width="*"/>
                <DataGridTextColumn Header="E-Mail" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Margin="0,10,0,0" Orientation="Vertical">
            <WrapPanel Margin="0,0,0,5">
                <TextBlock Text="Vorname:" Width="80"/>
                <TextBox x:Name="txtVorname" Width="150"/>
                <TextBlock Text="Nachname:" Width="80" Margin="20,0,0,0"/>
                <TextBox x:Name="txtNachname" Width="150"/>
            </WrapPanel>

            <WrapPanel Margin="0,0,0,5">
                <TextBlock Text="Instrument:" Width="80"/>
                <TextBox x:Name="txtInstrument" Width="150"/>
                <TextBlock Text="E-Mail:" Width="80" Margin="20,0,0,0"/>
                <TextBox x:Name="txtEmail" Width="150"/>
            </WrapPanel>

            <WrapPanel Margin="0,0,0,5">
                <TextBlock Text="Telefon:" Width="80"/>
                <TextBox x:Name="txtTelefon" Width="150"/>
            </WrapPanel>

            <WrapPanel Margin="0,5,0,0">
                <Button Content="Neu" Width="80" />
                <Button Content="Speichern" Width="80" Margin="10,0,0,0"/>
                <Button Content="Löschen" Width="80" Margin="10,0,0,0"/>
                <Button Content="Schließen" Width="80" Margin="10,0,0,0"/>
            </WrapPanel>
        </StackPanel>



    </Grid>
</Window>
